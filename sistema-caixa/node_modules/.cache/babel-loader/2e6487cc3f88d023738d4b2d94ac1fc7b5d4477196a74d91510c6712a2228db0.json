co\">\r\n      <h2>Troco</h2>\r\n      <input type=\"text\" v-model=\"troco\" @input=\"formatarMoeda\"  placeholder=\"R$ 0,00\" id=\"troco\" />\r\n    </section>\r\n\r\n    <section id=\"finalizar\">\r\n      <button @click=\"finalizarVenda\">FINALIZAR VENDA</button>\r\n    </section>\r\n  </main>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: \"registro\",\r\n  data() {\r\n    return ({\r\nvalordotroco : resultado\r\n    });\r\n},\r\n  methods: {\r\n    formatarMoeda(event) {\r\n      let input = event.target;\r\n      let valor = input.value.replace(/\\D/g, \"\");\r\n\r\n      if (valor === \"\") {\r\n        input.value = \"0,00\";\r\n        return;\r\n      }\r\n\r\n      valor = (parseFloat(valor) / 100).toLocaleString(\"pt-BR\", {\r\n        style: \"currency\",\r\n        currency: \"BRL\"\r\n      });\r\n\r\n      input.value = valor;\r\n    },\r\n    finalizarVenda() {\r\n      alert(\"Venda finalizada!\");\r\n    },\r\n   \r\n    calcularTroco() {\r\n      let entrada = document.getElementById('venda').value\r\n      let pago = document.getElementById('pago').value\r\n      const resultado = pago - entrada\r\n\r\n      document.getElementById('troco').textContent = resultado.toLocaleString(\"pt-BR\", {\r\n    style: \"currency\",\r\n    currency: \"BRL\"\r\n});\r\n\r\n\r\n     \r\n      \r\n     \r\n    }\r\n\r\n  }\r\n\r\n  \r\n\r\n};\r\n</script>\r\n\r\n<style scoped>\r\nmain {\r\n  background-color: aqua;\r\n  margin-top: 10%;\r\n  width: 500px;\r\n  height: 400px;\r\n  border-radius: 10%;\r\n}\r\n\r\nsection {\r\n  margin-left: 15%;\r\n}\r\n\r\n#desc {\r\n  width: 100%;\r\n  padding-left: 10px;\r\n  border-radius: 5px;\r\n}\r\n</style>\r\n"],"mappings":"AA6BA,eAAe;EACbA,IAAI,EAAE,UAAU;EAChBC,IAAIA,CAAA,EAAG;IACL,OAAQ;MACZC,YAAW,EAAIC;IACX,CAAC;EACL,CAAC;EACCC,OAAO,EAAE;IACPC,aAAaA,CAACC,KAAK,EAAE;MACnB,IAAIC,KAAI,GAAID,KAAK,CAACE,MAAM;MACxB,IAAIC,KAAI,GAAIF,KAAK,CAACG,KAAK,CAACC,OAAO,CAAC,KAAK,EAAE,EAAE,CAAC;MAE1C,IAAIF,KAAI,KAAM,EAAE,E